<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.ConstructionScreen.ConstructionFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:elevation="10dp"
            android:layout_height="60dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/back_tabs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/back_select"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/customTabItem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="программы"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/customTabItem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="тренировки"
                android:gravity="center"/>

            <TextView
                android:id="@+id/customTabItem3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="упражнения"
                android:gravity="center"/>

        </LinearLayout>
    </FrameLayout>
        </RelativeLayout>


    <com.example.trainingconstructor.Views.CustomView.NonSwipeableViewPager
        android:id="@+id/viewPagerInConstructionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>